<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="405dp"
        android:layout_height="393dp"
        android:layout_marginTop="208dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Player 1 선택 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Player 1 말 선택"
            android:textSize="18sp" />

        <RadioGroup
            android:id="@+id/player1Group"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/icon1_p1"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:button="@null"
                android:drawableTop="@drawable/icon1"
                android:gravity="center"
                android:padding="8dp"
                android:text="아이콘1" />

            <RadioButton
                android:id="@+id/icon2_p1"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:button="@null"
                android:drawableTop="@drawable/icon2"
                android:gravity="center"
                android:padding="8dp"
                android:text="아이콘2" />

            <RadioButton
                android:id="@+id/icon3_p1"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:button="@null"
                android:drawableTop="@drawable/icon3"
                android:gravity="center"
                android:padding="8dp"
                android:text="아이콘3" />

            <RadioButton
                android:id="@+id/icon4_p1"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:button="@null"
                android:drawableTop="@drawable/icon4"
                android:gravity="center"
                android:padding="8dp"
                android:text="아이콘4" />
        </RadioGroup>

        <!-- Player 2 선택 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="Player 2 말 선택"
            android:textSize="18sp" />

        <RadioGroup
            android:id="@+id/player2Group"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/icon1_p2"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:button="@null"
                android:drawableTop="@drawable/icon1"
                android:gravity="center"
                android:padding="8dp"
                android:text="아이콘1" />

            <RadioButton
                android:id="@+id/icon2_p2"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:button="@null"
                android:drawableTop="@drawable/icon2"
                android:gravity="center"
                android:padding="8dp"
                android:text="아이콘2" />

            <RadioButton
                android:id="@+id/icon3_p2"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:button="@null"
                android:drawableTop="@drawable/icon3"
                android:gravity="center"
                android:padding="8dp"
                android:text="아이콘3" />

            <RadioButton
                android:id="@+id/icon4_p2"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:button="@null"
                android:drawableTop="@drawable/icon4"
                android:gravity="center"
                android:padding="8dp"
                android:text="아이콘4" />
        </RadioGroup>

        <Button
            android:id="@+id/confirmButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확인" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>